<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/createDatabase"
            style="@style/commonButton"
            android:text="@string/create_database" />

        <Button
            android:id="@+id/deleteDatabase"
            style="@style/commonButton"
            android:text="@string/delete_database" />

        <Button
            android:id="@+id/createTable"
            style="@style/commonButton"
            android:text="@string/create_table" />

        <Button
            android:id="@+id/dropTable"
            style="@style/commonButton"
            android:text="@string/drop_table" />

        <Button
            android:id="@+id/dropAllTable"
            style="@style/commonButton"
            android:text="@string/drop_all_table" />

        <Button
            android:id="@+id/saveEntity"
            style="@style/commonButton"
            android:text="@string/save_entity" />

        <Button
            android:id="@+id/delEntity"
            style="@style/commonButton"
            android:text="@string/delete_entity" />

        <Button
            android:id="@+id/delAllEntity"
            style="@style/commonButton"
            android:text="@string/delete_all_entity" />

        <Button
            android:id="@+id/updateEntityById"
            style="@style/commonButton"
            android:text="update entity by id" />

        <Button
            android:id="@+id/updateEntityByCondition"
            style="@style/commonButton"
            android:text="@string/update_entity_by_condition" />

        <Button
            android:id="@+id/findLastEntity"
            style="@style/commonButton"
            android:text="@string/find_last_entity" />

        <Button
            android:id="@+id/findByCondition"
            style="@style/commonButton"
            android:text="@string/find_entity_by_condition" />

        <Button
            android:id="@+id/findAllEntity"
            style="@style/commonButton"
            android:text="@string/find_all_entity" />

    </LinearLayout>


</ScrollView>
